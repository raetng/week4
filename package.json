{
  "name": "weather-reports-app",
  "version": "1.0.0",
  "description": "A simple weather reports web application with SQLite storage",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":60,\"functions\":60,\"lines\":70,\"statements\":70}}'",
    "test:ci": "jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "db:init": "node database/init-db.js",
    "db:seed": "node database/init-db.js --seed",
    "db:reset": "rm -f weather.db && node database/init-db.js --seed",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:perf": "k6 run tests/performance/load-test.js",
    "test:perf:json": "k6 run --out json=k6-results.json tests/performance/load-test.js"
  },
  "keywords": [
    "weather",
    "express",
    "sqlite",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "sql.js": "^1.10.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "app.js"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  }
}
